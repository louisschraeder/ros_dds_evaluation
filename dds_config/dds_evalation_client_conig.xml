<?xml version="1.0" encoding="UTF-8" ?>
<dds xmlns="http://www.eprosima.com">
    <profiles>
        <participant profile_name="client_participant" is_default_profile="true">
            <rtps>
                <name>Client</name>
                <useBuiltinTransports>false</useBuiltinTransports>
                <userTransports>
                    <transport_id>TCPTransport</transport_id>
                </userTransports>
            </rtps>
        </participant>
        <data_writer profile_name="client_publisher" is_default_profile="true">
            <qos>
                <partition>
                    <names>
                        <name>client_partition</name> <!-- Send only client -->
                    </names>
                </partition>
            </qos>
        </data_writer>
        <data_reader profile_name="client_subscriber" is_default_profile="true">
            <qos>
                <partition>
                    <names>
                        <name>unused_partition</name> <!-- Dummy-Partition -->
                    </names>
                </partition>
            </qos>
        </data_reader>
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>TCPTransport</transport_id>
                <type>TCPv4</type>
                <wan_addr>192.168.1.99</wan_addr> <!-- IP of the server -->
                <listening_ports>
                    <port>5100</port>
                </listening_ports>
            </transport_descriptor>
        </transport_descriptors>
    </profiles>
</dds>
