<?xml version="1.0" encoding="UTF-8" ?>
<profiles xmlns="http://www.eprosima.com">
    <participant profile_name="participant_profile_server_full_example" is_default_profile="true">
        <rtps>
            <builtin>
                <!-- Set participant as SERVER -->
                <discovery_config>
                    <discoveryProtocol>SERVER</discoveryProtocol>
                </discovery_config>
                <!-- Set OWN SERVER's listening locator for PDP -->
                <metatrafficUnicastLocatorList>
                    <locator>
                        <udpv4>
                            <address>192.168.1.141</address>
                            <port>11811</port>
                        </udpv4>
                    </locator>
                </metatrafficUnicastLocatorList>
            </builtin>
        </rtps>
    </participant>
    <!-- Data Writer QoS Profile (Publisher) -->
        <data_writer profile_name="large_data_writer">
            <qos>
                <reliability>
                    <kind>BEST_EFFORT</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
            </qos>
            <topic>
                <historyQos>
                    <kind>KEEP_LAST</kind> <!-- string -->
                    <depth>10</depth> <!-- uint32 -->
                </historyQos>
            </topic>
        </data_writer>

        <!-- Data Reader QoS Profile (Subscriber) -->
        <data_reader profile_name="large_data_reader">
            <qos>
                <reliability>
                    <kind>BEST_EFFORT</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
            </qos>
            <topic>
                <historyQos>
                    <kind>KEEP_LAST</kind> <!-- string -->
                    <depth>10</depth> <!-- uint32 -->
                </historyQos>
            </topic>
        </data_reader>
</profiles>